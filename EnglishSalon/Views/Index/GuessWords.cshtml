
@{
    ViewBag.Title = "GuessWords";
}

<h2>GuessWords</h2>
<div id="div-word" style="width: 80%; height: 70%;margin-left:30% 15% 15%;padding-top:10%;">
    <font style="font-size:140px;text-align:center;">@ViewBag.Word</font>
    <button id="btn-next" onclick="Next('@ViewBag.Word')">NEXT</button>
</div>
<script>
    function Next(word) {
        location.href = "GuessWords?word=" + word;
    }
</script>


