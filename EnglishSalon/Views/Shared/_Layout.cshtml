                        <input type="text" class="input-value input-value-red" />
                    </li>
                    <li>
                        <img src="~/Content/img/2e3d41e81dae8ca75bef8218629f8f45.png" style="width:80px;height:50px;" />
                    </li>
                    <li>
                        <input type="text" class="input-value input-value-blue" />
                    </li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
